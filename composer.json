{
  "name": "friendsofcxml/cxml-php",
  "license": "MIT",
  "description": "PHP Implementation of cXML Standard",
  "keywords": [
    "data",
    "xml",
    "cxml",
    "edi",
    "commerce",
    "e-commerce",
    "punchout",
    "order-request"
  ],
  "type": "library",
  "authors": [
    {
      "name": "Markus Thielen",
      "email": "markus@logicx.de"
    },
    {
      "name": "Giovanni Piemontese",
      "email": "info@gywebsolutions.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-simplexml": "*",
    "ext-dom": "*",
    "ext-libxml": "*",
    "beberlei/assert": "@stable",
    "jms/serializer": "^3.17",
    "symfony/http-foundation": "^5.4 || ^6.0",
    "symfony/routing": "^5.4 || ^6.0",
    "psr/log": "^1.0 || ^2.0 || ^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "phpstan/phpstan": "^1.6.0",
    "friendsofphp/php-cs-fixer": "^3.8",
    "php-parallel-lint/php-parallel-lint": "^1.3",
    "enlightn/security-checker": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "CXml\\": "src/CXml/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CXmlTest\\": "tests/CXmlTest/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --testdox tests",
    "sniff-fix": "vendor/bin/php-cs-fixer fix",
    "phpstan": "vendor/bin/phpstan analyze"
  }
}
